<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Home_Screen"
    android:background="#D1EDFF">


    <Button
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:text="Search For Shows"
        android:id="@+id/searchbutton"
        android:onClick="onSearchButtonClick"
        android:layout_below="@+id/autoCompleteTextView"
        android:layout_centerHorizontal="true"
        android:background="#B2B2B2" />

    <Button
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="My Shows List"
        android:id="@+id/showslistbutton"
        android:layout_marginTop="56dp"
        android:background="#B2B2B2"
        android:layout_below="@+id/searchbutton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="Notification Settings"
        android:id="@+id/notificationsettingsbutton"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#B2B2B2" />

    <AutoCompleteTextView
        android:layout_width="@dimen/abc_search_view_preferred_width"
        android:layout_height="45dp"
        android:id="@+id/autoCompleteTextView"
        android:hint="@string/enter_shows"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:singleLine="true"
        android:textColor="#000000"
        android:layout_alignRight="@+id/notificationsettingsbutton"
        android:layout_alignEnd="@+id/notificationsettingsbutton" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imageView"
        android:src="@drawable/tvsnlogo"
        android:layout_alignWithParentIfMissing="false"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_above="@+id/autoCompleteTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="52dp" />

</RelativeLayout>
